    	if(accountsPane.isVisible() == true) {
    		accountsPane.setVisible(false);
    	}
    	
    	
    	if(editBook.isVisible() == true) {
    		editBook.setVisible(false);
    	}
    	
    	
    	if(editUser.isVisible() == true) {
    		editUser.setVisible(false);
    	}
    	
    	recordsPane.setVisible(true);
    }
    
